{
  "backtest_scenarios": [
    {
      "scenario_id": "trending_market_test",
      "name": "トレンド相場バックテスト",
      "description": "明確なトレンドが形成される市場環境でのテスト",
      "test_period": {
        "duration_months": 12,
        "market_regime": "trending",
        "expected_volatility": [0.15, 0.35]
      },
      "data_requirements": {
        "min_data_points": 252,
        "required_indicators": ["SMA", "EMA", "RSI", "MACD", "BB"],
        "data_quality_threshold": 0.95
      },
      "success_criteria": {
        "min_sharpe_ratio": 1.2,
        "max_drawdown": 0.12,
        "min_win_rate": 0.45,
        "benchmark_outperformance": 0.03
      }
    },
    {
      "scenario_id": "volatile_market_test",
      "name": "高ボラティリティ相場バックテスト",
      "description": "ボラティリティが高い不安定な市場環境でのテスト",
      "test_period": {
        "duration_months": 6,
        "market_regime": "volatile",
        "expected_volatility": [0.25, 0.60]
      },
      "data_requirements": {
        "min_data_points": 126,
        "required_indicators": ["ATR", "VIX", "RSI", "StochOSC"],
        "data_quality_threshold": 0.90
      },
      "success_criteria": {
        "min_sharpe_ratio": 0.8,
        "max_drawdown": 0.20,
        "min_win_rate": 0.40,
        "volatility_adjusted_return": 0.15
      }
    },
    {
      "scenario_id": "sideways_market_test", 
      "name": "レンジ相場バックテスト",
      "description": "明確な方向性がないレンジ相場でのテスト",
      "test_period": {
        "duration_months": 9,
        "market_regime": "sideways",
        "expected_volatility": [0.08, 0.22]
      },
      "data_requirements": {
        "min_data_points": 189,
        "required_indicators": ["BB", "RSI", "StochOSC", "Williams"],
        "data_quality_threshold": 0.92
      },
      "success_criteria": {
        "min_sharpe_ratio": 1.0,
        "max_drawdown": 0.10,
        "min_win_rate": 0.50,
        "mean_reversion_efficiency": 0.6
      }
    },
    {
      "scenario_id": "crisis_market_test",
      "name": "クライシス相場バックテスト", 
      "description": "市場危機・急落局面での耐久性テスト",
      "test_period": {
        "duration_months": 3,
        "market_regime": "crisis",
        "expected_volatility": [0.40, 1.00]
      },
      "data_requirements": {
        "min_data_points": 63,
        "required_indicators": ["VIX", "ATR", "RSI", "ADX"],
        "data_quality_threshold": 0.85
      },
      "success_criteria": {
        "min_sharpe_ratio": 0.5,
        "max_drawdown": 0.25,
        "capital_preservation_rate": 0.75,
        "recovery_time_days": 90
      }
    },
    {
      "scenario_id": "bull_market_test",
      "name": "強気相場バックテスト",
      "description": "長期的な上昇トレンド相場での最適化テスト", 
      "test_period": {
        "duration_months": 18,
        "market_regime": "bull",
        "expected_volatility": [0.10, 0.25]
      },
      "data_requirements": {
        "min_data_points": 378,
        "required_indicators": ["SMA", "EMA", "MACD", "ROC"],
        "data_quality_threshold": 0.96
      },
      "success_criteria": {
        "min_sharpe_ratio": 1.5,
        "max_drawdown": 0.08,
        "min_win_rate": 0.55,
        "trend_following_efficiency": 0.8
      }
    }
  ],
  "scenario_combinations": [
    {
      "combination_name": "comprehensive_stress_test",
      "description": "包括的ストレステスト - 全市場環境での検証",
      "included_scenarios": [
        "trending_market_test",
        "volatile_market_test", 
        "sideways_market_test",
        "crisis_market_test"
      ],
      "weight_allocation": {
        "trending_market_test": 0.3,
        "volatile_market_test": 0.25,
        "sideways_market_test": 0.3,
        "crisis_market_test": 0.15
      },
      "combined_success_criteria": {
        "weighted_sharpe_ratio": 1.0,
        "max_combined_drawdown": 0.15,
        "consistency_score": 0.7
      }
    },
    {
      "combination_name": "normal_market_conditions",
      "description": "通常市場環境テスト - 日常的な市場状況",
      "included_scenarios": [
        "trending_market_test",
        "sideways_market_test",
        "bull_market_test"
      ],
      "weight_allocation": {
        "trending_market_test": 0.4,
        "sideways_market_test": 0.35,
        "bull_market_test": 0.25
      },
      "combined_success_criteria": {
        "weighted_sharpe_ratio": 1.3,
        "max_combined_drawdown": 0.10,
        "consistency_score": 0.8
      }
    }
  ],
  "global_scenario_settings": {
    "data_preparation": {
      "warmup_period_days": 20,
      "cooldown_period_days": 5,
      "data_validation_enabled": true,
      "outlier_detection_enabled": true
    },
    "execution_settings": {
      "transaction_costs": 0.001,
      "slippage_model": "linear",
      "market_impact_factor": 0.0005,
      "execution_delay_ms": 100
    },
    "risk_controls": {
      "position_limits_enabled": true,
      "stop_loss_enabled": true,
      "circuit_breaker_enabled": true,
      "margin_requirements": 0.1
    },
    "reporting": {
      "detailed_trade_log": true,
      "performance_attribution": true,
      "risk_decomposition": true,
      "benchmark_comparison": true
    }
  }
}
