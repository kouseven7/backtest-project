{
    "system_config": {
        "version": "5.1.3",
        "system_name": "risk_adjusted_return_optimization",
        "description": "リスク調整後リターンの最適化システム",
        "author": "imega",
        "created_date": "2025-07-21"
    },
    "objective_weights": {
        "sharpe": 0.4,
        "sortino": 0.3,
        "calmar": 0.2,
        "drawdown": 0.1
    },
    "constraints": {
        "weight_constraint": {
            "type": "weight",
            "severity": "soft",
            "min_weight": 0.05,
            "max_weight": 0.6,
            "max_single_weight": 0.4,
            "enabled": true
        },
        "volatility_constraint": {
            "type": "volatility",
            "severity": "soft",
            "max_portfolio_volatility": 0.25,
            "enabled": true
        },
        "drawdown_constraint": {
            "type": "drawdown",
            "severity": "soft",
            "max_drawdown": 0.15,
            "enabled": true
        },
        "correlation_constraint": {
            "type": "correlation",
            "severity": "soft",
            "max_correlation_exposure": 0.7,
            "enabled": true
        },
        "concentration_constraint": {
            "type": "concentration",
            "severity": "soft",
            "max_herfindahl_index": 0.4,
            "enabled": true
        },
        "turnover_constraint": {
            "type": "turnover",
            "severity": "soft",
            "max_turnover": 0.5,
            "enabled": false
        }
    },
    "optimization": {
        "method": "differential_evolution",
        "max_iterations": 1000,
        "population_size": 50,
        "tolerance": 1e-6,
        "seed": 42,
        "fallback_methods": ["scipy_minimize", "gradient_descent"]
    },
    "performance": {
        "risk_free_rate": 0.02,
        "trading_days": 252,
        "confidence_level": 0.95,
        "var_quantile": 0.05,
        "cvar_quantile": 0.05
    },
    "adaptive": {
        "enable_adaptive_constraints": true,
        "volatility_sensitivity": 0.5,
        "trend_sensitivity": 0.3,
        "market_regime_mapping": {
            "bull": {"volatility_multiplier": 0.8, "return_focus": 1.2},
            "bear": {"volatility_multiplier": 1.5, "risk_focus": 1.5},
            "volatile": {"volatility_multiplier": 1.3, "stability_focus": 1.4},
            "sideways": {"volatility_multiplier": 1.0, "diversification_focus": 1.1},
            "normal": {"volatility_multiplier": 1.0, "balanced_focus": 1.0}
        }
    },
    "risk_profiles": {
        "conservative": {
            "max_volatility": 0.12,
            "max_drawdown": 0.08,
            "min_diversification": 0.5,
            "objective_weights": {
                "sharpe": 0.2,
                "sortino": 0.2,
                "calmar": 0.4,
                "drawdown": 0.2
            },
            "constraint_adjustments": {
                "max_single_weight": 0.25,
                "max_correlation_exposure": 0.5
            }
        },
        "moderate": {
            "max_volatility": 0.20,
            "max_drawdown": 0.15,
            "min_diversification": 0.3,
            "objective_weights": {
                "sharpe": 0.4,
                "sortino": 0.3,
                "calmar": 0.2,
                "drawdown": 0.1
            },
            "constraint_adjustments": {
                "max_single_weight": 0.4,
                "max_correlation_exposure": 0.7
            }
        },
        "aggressive": {
            "max_volatility": 0.35,
            "max_drawdown": 0.25,
            "min_diversification": 0.2,
            "objective_weights": {
                "sharpe": 0.5,
                "sortino": 0.3,
                "calmar": 0.1,
                "drawdown": 0.1
            },
            "constraint_adjustments": {
                "max_single_weight": 0.6,
                "max_correlation_exposure": 0.8
            }
        }
    },
    "multi_period": {
        "enable_multi_period": true,
        "horizons": [63, 126, 252],
        "horizon_weights": [0.3, 0.4, 0.3],
        "weight_decay_factor": 0.95,
        "min_data_points": 63
    },
    "robustness": {
        "bootstrap_samples": 100,
        "monte_carlo_scenarios": 500,
        "sensitivity_analysis": true,
        "out_of_sample_periods": [30, 60, 90]
    },
    "execution": {
        "minimum_weight_change": 0.02,
        "transaction_cost": 0.001,
        "implementation_shortfall": 0.0005,
        "rebalancing_thresholds": {
            "low": 0.05,
            "medium": 0.1,
            "high": 0.2
        }
    },
    "validation": {
        "validation_thresholds": {
            "minimum_overall_score": 0.6,
            "minimum_category_scores": {
                "statistical": 0.5,
                "constraint": 0.8,
                "performance": 0.6,
                "robustness": 0.5
            },
            "critical_failure_thresholds": {
                "max_constraint_violations": 2,
                "min_sharpe_ratio": -0.5,
                "max_drawdown": 0.5
            }
        },
        "test_weights": {
            "statistical": 0.2,
            "constraint": 0.3,
            "performance": 0.3,
            "robustness": 0.2
        },
        "backtest": {
            "out_of_sample_periods": [30, 60, 90],
            "monte_carlo_simulations": 500,
            "bootstrap_samples": 200,
            "confidence_levels": [0.95, 0.99]
        }
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file_logging": true,
        "console_logging": true
    },
    "data_sources": {
        "fallback_metrics_path": "metrics/performance_metrics.py",
        "data_cache_enabled": true,
        "cache_expiry_hours": 24
    }
}
