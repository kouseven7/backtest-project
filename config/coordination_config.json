{
  "coordination_settings": {
    "system_name": "Multi-Strategy Coordination System",
    "version": "1.0.0",
    "max_concurrent_strategies": 8,
    "coordination_mode": "adaptive"
  },
  "execution_modes": {
    "hybrid_enabled": true,
    "thread_pool_size": 4,
    "process_pool_size": 2,
    "async_max_concurrent": 8,
    "execution_timeout": 300,
    "mode_selection": {
      "cpu_intensive_threshold": 0.7,
      "io_bound_threshold": 0.3,
      "memory_threshold": 0.8
    }
  },
  "load_balancing": {
    "enable_dynamic_adjustment": true,
    "cpu_threshold": 0.8,
    "memory_threshold": 0.7,
    "adjustment_interval": 5.0,
    "load_balancing_algorithm": "weighted_round_robin",
    "resource_monitoring_interval": 1.0,
    "performance_history_length": 100
  },
  "dependency_management": {
    "enable_dependency_graph": true,
    "cache_shared_data": true,
    "max_dependency_depth": 5,
    "dependency_timeout": 30,
    "cache_expiry": 300,
    "shared_data_types": [
      "market_data",
      "trend_analysis",
      "volatility_data",
      "volume_indicators"
    ]
  },
  "fallback_settings": {
    "enable_fallback": true,
    "error_tolerance": 3,
    "fallback_timeout": 30,
    "fallback_levels": {
      "individual_strategy": {
        "max_retries": 3,
        "retry_delay": 1.0,
        "timeout": 60
      },
      "strategy_group": {
        "max_group_failures": 2,
        "group_timeout": 120,
        "alternative_group_selection": true
      },
      "system_level": {
        "legacy_system_fallback": true,
        "safe_mode_execution": true,
        "emergency_stop_threshold": 0.5
      }
    }
  },
  "monitoring": {
    "enable_real_time_monitoring": true,
    "performance_metrics": true,
    "resource_tracking": true,
    "anomaly_detection": true,
    "monitoring_interval": 2.0,
    "metrics_retention_period": 3600,
    "alert_thresholds": {
      "cpu_usage": 0.9,
      "memory_usage": 0.85,
      "execution_time": 180,
      "error_rate": 0.1
    }
  },
  "resource_limits": {
    "max_memory_per_strategy": "512MB",
    "max_cpu_per_strategy": 0.25,
    "total_memory_limit": "4GB",
    "disk_space_limit": "1GB",
    "network_bandwidth_limit": "100MB/s"
  },
  "strategy_profiles": {
    "VWAPBounceStrategy": {
      "execution_type": "thread",
      "priority": "medium",
      "expected_duration": 15,
      "resource_requirements": {
        "cpu": 0.1,
        "memory": "64MB"
      },
      "dependencies": ["market_data", "volume_indicators"]
    },
    "GCStrategy": {
      "execution_type": "process",
      "priority": "high",
      "expected_duration": 30,
      "resource_requirements": {
        "cpu": 0.3,
        "memory": "128MB"
      },
      "dependencies": ["market_data", "trend_analysis"]
    },
    "BreakoutStrategy": {
      "execution_type": "process",
      "priority": "high",
      "expected_duration": 25,
      "resource_requirements": {
        "cpu": 0.25,
        "memory": "96MB"
      },
      "dependencies": ["market_data", "volatility_data"]
    },
    "OpeningGapStrategy": {
      "execution_type": "async",
      "priority": "medium",
      "expected_duration": 10,
      "resource_requirements": {
        "cpu": 0.05,
        "memory": "32MB"
      },
      "dependencies": ["market_data"]
    },
    "MomentumInvestingStrategy": {
      "execution_type": "thread",
      "priority": "low",
      "expected_duration": 20,
      "resource_requirements": {
        "cpu": 0.15,
        "memory": "80MB"
      },
      "dependencies": ["market_data", "trend_analysis"]
    }
  },
  "logging": {
    "level": "INFO",
    "log_coordination_steps": true,
    "log_resource_usage": true,
    "log_performance_metrics": true,
    "log_errors": true,
    "log_file": "logs/multi_strategy_coordination.log",
    "max_log_size": "100MB",
    "log_rotation_count": 5
  }
}
