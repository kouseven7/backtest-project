{
  "system_config": {
    "version": "1.0.0",
    "description": "ペーパートレード実行システム設定"
  },
  "scheduler": {
    "default_interval_minutes": 15,
    "market_hours_only": true,
    "max_execution_time_minutes": 10,
    "retry_on_failure": true,
    "max_retries": 3
  },
  "monitor": {
    "performance_window_hours": 24,
    "log_level": "INFO",
    "alert_thresholds": {
      "min_return": -0.05,
      "max_drawdown": -0.10,
      "max_consecutive_failures": 5
    },
    "metrics_retention_days": 30,
    "enable_performance_tracking": true
  },
  "strategy": {
    "execution_mode": "simple",
    "default_symbols": ["AAPL", "MSFT", "GOOGL", "TSLA"],
    "lookback_periods": 100,
    "position_value": 10000,
    "max_positions": 4,
    "data_feed": {
      "provider": "realtime_feed",
      "update_interval_seconds": 60,
      "cache_duration_minutes": 5
    },
    "broker": {
      "initial_cash": 100000,
      "commission_per_trade": 1.0,
      "slippage_bps": 5
    },
    "strategy_selector": {
      "selection_method": "score_based",
      "max_strategies": 3,
      "min_confidence": 0.6
    },
    "multi_strategy": {
      "weight_calculation": "equal",
      "rebalance_frequency": "daily",
      "risk_budget": 0.02
    }
  },
  "execution_modes": {
    "simple": {
      "description": "単一戦略実行モード",
      "default_strategy": "VWAP_Breakout",
      "available_strategies": [
        "VWAP_Breakout",
        "VWAP_Bounce", 
        "GC_Strategy",
        "Breakout",
        "Opening_Gap"
      ]
    },
    "integrated": {
      "description": "統合戦略実行モード",
      "enable_strategy_selection": true,
      "enable_portfolio_optimization": true,
      "enable_risk_management": true
    }
  },
  "logging": {
    "log_directory": "logs",
    "log_rotation": "daily",
    "log_retention_days": 14,
    "detailed_logging": true
  },
  "safety_settings": {
    "max_daily_trades": 20,
    "position_size_limit": 0.1,
    "stop_loss_percentage": 0.05,
    "emergency_stop_conditions": {
      "max_daily_loss": 0.03,
      "consecutive_failures": 10
    }
  }
}
