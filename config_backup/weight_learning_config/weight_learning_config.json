{
  "bayesian_optimization": {
    "kernel_type": "matern",
    "length_scale": 1.0,
    "nu": 1.5,
    "alpha": 1e-6,
    "acquisition_function": "EI",
    "xi": 0.01,
    "kappa": 2.576,
    "n_initial_samples": 10,
    "max_iterations": 50,
    "convergence_threshold": 1e-6
  },
  "performance_evaluation": {
    "lookback_period": 252,
    "min_observations": 30,
    "confidence_level": 0.95,
    "target_return": 0.10,
    "max_acceptable_drawdown": 0.20,
    "risk_free_rate": 0.02,
    "metric_weights": {
      "expected_return": 0.35,
      "max_drawdown": 0.25,
      "sharpe_ratio": 0.20,
      "calmar_ratio": 0.10,
      "win_rate": 0.10
    }
  },
  "adaptive_learning": {
    "micro_adjustment_threshold": 0.02,
    "standard_optimization_threshold": 0.05,
    "major_rebalancing_threshold": 0.20,
    "performance_lookback_days": 30,
    "volatility_lookback_days": 20,
    "poor_performance_threshold": -0.005,
    "consecutive_trigger_limit": 3,
    "min_days_between_major": 21,
    "market_stress_threshold": 0.03
  },
  "weight_constraints": {
    "strategy_weights": {
      "trend_following": {"min": 0.1, "max": 0.4},
      "mean_reversion": {"min": 0.1, "max": 0.4},
      "momentum": {"min": 0.05, "max": 0.3},
      "volatility_breakout": {"min": 0.05, "max": 0.3}
    },
    "portfolio_weights": {
      "max_single_asset": 0.3,
      "min_diversification": 0.01,
      "sector_concentration": 0.5
    },
    "meta_parameters": {
      "learning_rate": {"min": 0.1, "max": 3.0},
      "volatility_scaling": {"min": 0.5, "max": 2.5},
      "risk_aversion": {"min": 0.5, "max": 3.0},
      "rebalancing_threshold": {"min": 0.01, "max": 0.1}
    }
  },
  "integration": {
    "performance_correction_enabled": true,
    "trend_precision_enabled": true,
    "portfolio_integration_enabled": true,
    "strategy_scoring_enabled": true,
    "metric_weights_enabled": true
  },
  "meta_parameters": {
    "update_frequency_hours": 6,
    "min_performance_samples": 10,
    "market_analysis_window": 20,
    "adaptation_threshold": 0.02,
    "stress_detection_threshold": 0.03,
    "performance_decay_factor": 0.9
  },
  "optimization_history": {
    "storage_path": "optimization_history",
    "max_history_days": 365,
    "export_formats": ["csv", "json"],
    "backup_frequency_days": 7
  }
}
